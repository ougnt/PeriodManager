<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:background="@color/main_bg">

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/setting_language"
                  android:id="@+id/textView26" android:layout_margin="20dp" android:textColor="@color/text_color"
                  android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="5dp" android:layout_margin="5dp" android:background="@color/edit_text_bg">
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:weightSum="3"
                  android:background="@color/edit_text_bg">
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1" android:background="@drawable/flag_english"
                      android:layout_margin="6dp" android:layout_marginRight="3dp" android:id="@+id/flag_english"
                      android:onClick="englishOnclick"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1" android:background="@drawable/flag_thai" android:layout_margin="6dp"
                      android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:id="@+id/flag_thai"
                      android:onClick="thaiOnclick"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1"
                android:background="@drawable/flag_japanese" android:layout_margin="6dp"
                android:layout_marginLeft="3dp" android:id="@+id/flag_japanese" android:onClick="japaneseOnclick">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:weightSum="3" android:background="@color/edit_text_bg">
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1" android:background="@drawable/flag_vietnamese" android:layout_margin="6dp"
                      android:layout_marginRight="3dp" android:id="@+id/flag_vietnamese" android:onClick="vietnameseOnclick"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/flag_russian"
            android:layout_margin="6dp"
            android:layout_marginRight="3dp"
            android:id="@+id/flag_russian"
            android:onClick="russianOnclick" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="5dp"
                  android:layout_margin="5dp" android:background="@color/edit_text_bg"/>
</LinearLayout>