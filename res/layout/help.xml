<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/main_bg" android:weightSum="1">

    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                  android:layout_height="match_parent" android:layout_weight="0.1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="0.8" android:weightSum="1">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:layout_weight="0.1" android:weightSum="1">
            <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/help_title"
                    android:id="@+id/textView5" android:textColor="@color/text_color"
                    android:layout_margin="2dp" android:gravity="center" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="1dp"
                      android:layout_weight="0.8">
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/horizontalScrollView" android:layout_gravity="center_horizontal">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:weightSum="1">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" android:weightSum="1"
                            android:layout_weight="1" android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:id="@+id/imageView" android:src="@drawable/help_1" android:layout_weight="0.8"
                                android:adjustViewBounds="true" android:scaleType="fitStart"
                        />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/help_1"
                                android:id="@+id/textView4" android:layout_weight="0.2"
                                android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView3" android:src="@drawable/menstrual_icon"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_2" android:id="@+id/textView7" android:layout_weight="0.2"
                                  android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" android:weightSum="1"
                            android:layout_weight="1" android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:id="@+id/imageView2" android:src="@drawable/non_ovulation_icon" android:layout_weight="0.8"
                                android:adjustViewBounds="true" android:scaleType="fitStart"
                        />
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="@string/help_3"
                                android:id="@+id/textView6" android:layout_weight="0.2"
                                android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView5" android:src="@drawable/ovulation_icon"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_4" android:id="@+id/textView9" android:layout_weight="0.2"
                                  android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView6" android:src="@drawable/help_select_date"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_select_date" android:id="@+id/textView10"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView9" android:src="@drawable/help_menstrual_day_button"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_push_menstrual_button" android:id="@+id/textView13"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView7" android:src="@drawable/help_ovulation_prediction"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_prediction" android:id="@+id/textView11"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView8" android:src="@drawable/help_ovulation_seeking"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_seek" android:id="@+id/textView12"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView11" android:src="@drawable/help_demenstrual"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_de_menstrual" android:id="@+id/textView15"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView10" android:src="@drawable/help_demenstrual2"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_de_menstrual2" android:id="@+id/textView14"
                                  android:layout_weight="0.2" android:textColor="@color/text_color"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="match_parent" android:weightSum="1" android:layout_weight="1"
                                  android:layout_margin="10dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="1dp"
                                   android:id="@+id/imageView4" android:src="@drawable/help_help"
                                   android:layout_weight="0.8" android:adjustViewBounds="true"
                                   android:scaleType="fitStart"/>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:textAppearance="?android:attr/textAppearanceSmall"
                                  android:text="@string/help_help" android:id="@+id/textView8" android:layout_weight="0.2"
                                  android:textColor="@color/text_color"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="1dp"
                      android:layout_weight="0.1" android:clickable="false" android:weightSum="1">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help_do_not_show_this_in_the_future"
                    android:id="@+id/no_more_help_checkbox" android:textColor="@color/text_color" android:checked="false"
                    android:enabled="true" android:button="@drawable/checkbox_selector" android:layout_weight="0.6"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help_close_help"
                    android:id="@+id/help_close_button" android:layout_weight="0.4" android:layout_marginLeft="20dp"
                    android:onClick="saveAndExit" android:background="@color/button_urgent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                  android:layout_height="match_parent" android:layout_weight="0.1"/>
</LinearLayout>